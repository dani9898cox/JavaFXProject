               <children>
                  <TextField fx:id="messagetextField" prefHeight="26.0" prefWidth="482.0" />
                  <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onSendButtonClicked" prefHeight="26.0" prefWidth="103.0" text="Send" />
